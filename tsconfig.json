{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "bundle",
    "lib": [
      "es7"
    ]
  },
  "include": [
    "packages/**/*",
    "integration/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}